<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Register</title>
  </head>
  <body>
    @Html.Partial("Navbar-Index")
    <div class="login-container">
        <div class="register">
            <h3 class="update-title">Register</h3>
            <hr class="update-hr">
            <form action="register_user" method="post">
                <h5 class="form-titles">First Name: </h5><input class="form-control" type="text" name="FirstName">
                <h5 class="form-titles">Last Name: </h5><input class="form-control" type="text" name="LastName">
                <h5 class="form-titles">Email: </h5><input class="form-control" type="text" name="Email">
                <h5 class="form-titles">Password: </h5><input class="form-control" type="password" name="Password">
                <h5 class="form-titles">Confirm Password: </h5><input class="form-control" type="password" name="PasswordC"><br>
                <input class="btn btn-success login-btn btn-block" type="submit" value="Register"><br>
            </form>
        </div>

        <div class="errors">
            @{
                if (ViewBag.Errors != null) {
                    foreach(var error in ViewBag.Errors) {
                        <p class="alert alert-warning">@error</p>
                    }
                }
            }
        </div>
        <a href="login"><button class="btn btn-default btn-s btn-block">Already registered?</button></a>
    </div>
  </body>
</html>