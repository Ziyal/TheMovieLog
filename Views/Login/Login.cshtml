@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
  </head>
  <body>
    @Html.Partial("Navbar-Index")
    <div class="login-container">
        <div class="login">
        <h3 class="login-reg-title">Login</h3>
        <hr class="update-hr">
            <form action="login_user" method="post">
                <label class="form_titles">Email: </label><input class="form-control" type="text" name="Email">
                <label class="form_titles">Password: </label><input class="form-control" type="password" name="Password"><br>
                <input class="btn btn-basic login-btn btn-block" type="submit" value="Login"><br>
            </form>
        </div>
        <a href="register"><button class="btn btn-default btn-s btn-block">Need to register?</button></a>
        <div class="errors">
            @{
                if (ViewBag.Errors != null) {
                    foreach(var error in ViewBag.Errors) {
                        <p class="alert alert-warning">@error</p>
                    }
                }
            }
        </div>        
        
    </div>
  </body>
</html>