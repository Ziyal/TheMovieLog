@Html.Partial("Navbar-LoggedIn")

<div class="list_container">
    <h1>YOUR PROFILE</h1>
    <hr>

    @{
        if(@ViewBag.Success != null) {
            <h6 class="success_message alert alert-success">@ViewBag.Success</h6>
        }
    }

    <div class="profile_container">
        <h5 class="profile_title">Name</h5> 
        <p class="profile_text">@ViewBag.User.FirstName @ViewBag.User.LastName</p>

        <h5 class="profile_title">Email</h5>
        <p class="profile_text">@ViewBag.User.Email</p>

        <h5 class="profile_title">About Me</h5>
        <p class="profile_text">@ViewBag.User.About</p>

        <h5 class="profile_title">Favorite Movie</h5>
        <p class="profile_text">@ViewBag.User.FavoriteMovie</p>

        <h5 class="profile_title">User Since</h5>
        <p class="profile_text">@ViewBag.User.CreatedAt.ToString("MMMM yyyy")</p>
    </div>

    <a href="profile/edit"><button class="btn btn-default btn-block">Edit Profile</button></a>
</div>


<script type="text/javascript">
        $(function() {

            $(".success_message").delay(1000).fadeOut("slow");
        });
</script>