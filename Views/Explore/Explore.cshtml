@Html.Partial("Navbar-LoggedIn")

<div class="list_container">
    <h1>EXPLORE</h1>
    <hr>

    <h3>Users</h3>
        <div class="explore_users">
            <table class="table table">
                <thead>
                    <th>Avatar</th>
                    <th>Name</th>
                    <th>User Since</th>
                </thead>
                <tbody>
                @{
                    foreach(var user in @ViewBag.AllUsers) {
                    <tr>
                        <td><img src="@user.ProfilePicture" class="avatar" alt="avatar"></td>
                        <td><a href="/user_profile/@user.UserId">@user.FirstName @user.LastName</a></td>
                        <td>@user.CreatedAt.ToString("MMMM yyyy")</td>

                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>

    <h3>Lists</h3>
    <div class="explore_lists">
        <table class="table table">
            <thead>
                <th>Title</th>
                <th>Description</th>
                <th>Creator</th>
            </thead>
            <tbody>
            @{
                foreach(var list in @ViewBag.AllLists) {
                <tr>
                    <td><a href="/user_list/@list.ListId">@list.Name</a></td>
                    <td>@list.Description</td>
                    <td><a href="user_profile/@list.User.UserId">@list.User.FirstName @list.User.LastName</a></td>

                </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>